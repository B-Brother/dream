                                                <li class="favoriteproducts"><a href="#">收藏</a></li>			
                                                
                                            </ul>
                                            
                                        </div>
                                    </div>
                                    
                                	<div class="three_fourth columns"> 
                                        <p>$!skill.introduce</p> 
									<div class="price">
									#if(($!skill.downBoundPrice == $!skill.upBoundPrice) && ($!skill.downBoundPrice == $!skill.normalPrice))
										￥ $!skill.normalPrice 
									#else
										￥ $!skill.downBoundPrice  ~ ￥ $!skill.upBoundPrice 
									#end 
									<span>/
									#if($!skill.per == "SECONDARY")
										次
									#elseif($!skill.per == "SECOND")
										秒
									#elseif($!skill.per == "MINUTE")
										分钟
									#elseif($!skill.per == "HOUR")
										小时
									#elseif($!skill.per == "DAY")
										天
									#elseif($!skill.per == "WEEK")
										周 
									#end 
									</span></div>
                                    <form action="#" method="post" id="PayForm" class="product_attributes">
                                    	<input type="hidden" name="action" value="PayAction"/>
                                    	<input type="hidden" name="event_submit_do_ready" value="1"/>
                                    	<input type="hidden" name="skillId" value="$!skill.id"/>
                                        <fieldset class="attribute_fieldset">
                                            <label class="attribute_label">数量:</label>
                                            <div class="attribute_list">
	                                            <select name="amount">
	                                                  <option title="White" selected="selected">1</option>
	                                                  <option title="Red">2</option>
	                                                  <option title="Red">3</option> 
	                                            </select>
                                            </div>
                                            <br> 
                                        </fieldset>
                                          
                                    </form>

									<a href="#" id="cart" class="cart">立刻下单</a>

                                    </div>
                                </div>
                                
                                <div class="separator"></div>
                                
                                
                                <div class="tabcontainer">
                                    <ul class="tabs">
