<script type="text/javascript">
	$(document).ready(function(){ 
	    $(".size-list-item").mouseover(function(){
	    	var cls = $(this).attr("class");
	    	
	    	var isNowSelected = false;
	    	if(cls.indexOf("sli-selected") > -1){
	        	isNowSelected = true;
	        }
			 
			## 如果未选择才进行简单边框描红 
	    	if(!isNowSelected){
	        	$(this).css("border","1px solid #f43499");
	        }
	    });
	    $(".size-list-item").mouseleave(function(){
	    	var cls = $(this).attr("class");
	    	
	    	var isNowSelected = false;
	    	if(cls.indexOf("sli-selected") > -1){
	        	isNowSelected = true;
	        }
	        
	        if(!isNowSelected){
	    		$(this).css("border","1px solid #b5b5b5");
	    	}
	    });
	    
	    $(".size-list-item").click(function(){
	    	## 清除选中的所有样式
	    	$(".size-list-item").css("border","1px solid #b5b5b5");
	    	$(".size-list-item").attr("class","size-list-item");
	    	
	    	## 加上选中的边框样式
	    	$(this).css("border","2px solid #f43499");
	        $(this).attr("class","size-list-item sli-selected");
	        
	        ## sku信息
	        var skuId = $(this).attr("data-sku-id");
	        $("#skuId").val(skuId);
	        
	        ## 价格更新
	        var price = $(this).attr("data-price");
	        $("#J-price-num").html(price);
	    });
	    
	    
	    $(".num-reduce").click(function(){
	    	var num = parseInt($("#S-num-input").val());
	    	if(num <= 0){ 
		    	$(this).attr("class","num-reduce num-reduce-disabled"); 
	    	}else{
	    		$("#S-num-input").val(num-1);
	        	$("#S-num-input-em").html(num-1); 
	    	} 
	    });
	    
	    $(".num-add").click(function(){
	    	var num = parseInt($("#S-num-input").val());
	    	if(num >= 50){
		    	$(this).attr("class","num-add num-add-disabled");
	    	}else{
		    	$("#S-num-input").val(num+1);
		        $("#S-num-input-em").html(num+1); 
	    	}
	        
	    });
	    
	    jQuery("#cart").click(function() {
			document.getElementById("buyForm").submit();
		}); 
	});
</script>
