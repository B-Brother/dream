<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sven.dream.dal.user.mapper.DreamUserDoMapperExt">
  <select id="getLoginDreamUser" parameterType="java.lang.String" resultMap="BaseResultMap"> 
	    select 
	    <include refid="Base_Column_List" />
	    from dream_user
	    where name = #{name}
	    and is_deleted = 'n'
   </select>
   
   <select id="getUserListByQuery" parameterType="com.sven.dream.common.query.UserQuery" resultMap="BaseResultMap">  
   	    select 
	    <include refid="Base_Column_List" />
	    from dream_user
	    <where>  
	    	is_deleted = 'n'
	        <if test="loginName != null">  
	            and name = #{loginName}  
	        </if>  
	        <if test="password != null">  
	            and password = #{password}  
	        </if>    
	    </where>  
</select>  
</mapper>






